template(name='admin')
    .ui.header 
        +i name='shield'
        |admin
    if in_dev
        .ui.header 
            +i name='database'
            |database manager
        with query_doc
            .ui.inline.header 
                |Docs.find {
            +text_edit key='query_key' label='query key' icon='key'
            .ui.inline.header :
            +text_edit key='query_value' label='query value' icon='hashtag'
            .ui.inline.header },
            +text_edit key='operator' label='$operator' icon='dollar-key'
            .ui.inline.header :
            +text_edit key='modifier_key' label='modifier key' icon='key'
            .ui.inline.header :
            +text_edit key='modifier_value' label='modifier_value' icon='hashtag'
            .ui.inline.header }
            if query_count 
                .ui.header test query count #{query_count}
        .ui.button.test_query
            +i name='info'
            |test query
        .ui.button.run_query
            +i name='alert'
            |run query
        
            