template(name='faqs')
    .ui.padded.grid
        .sixteen.wide.center.aligned.column
            .ui.header 
                |Home > faqs
            .ui.header Got questions?
            .ui.massive.header We can help!
            .ui.action.input
                input(type='text' placeholder='Ask a question...')
                .ui.yellow.button
                    |Search
            if currentUser 
                .ui.button.add_faq
                    i.plus.icon
                    
                    
template(name='get_started')
    +page key='get_started'
    
template(name='about')
    +page key='about'

template(name='contact')
    .ui.header contact us
    +page key='contact'


template(name='page')
    .ui.hidden.divider
    .ui.container
        with page_doc 
            |!{content}
            if currentUser 
                a.ui.button(href="/post/#{_id}/edit")
                    i.large.pencil.icon
        else 
            .ui.button.create_doc
                i.shield.icon
                |create '#{key}' page doc